<?xml version="1.0" encoding="UTF-8"?>
<xs:schema 
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    elementFormDefault="qualified"
    attributeFormDefault="unqualified">  
    
    <xs:element name="Numerotation" type="GlobalNumbering"/>
    
    <xs:complexType name="GlobalNumbering">
        <xs:sequence>
            <xs:element name="QuestNum" type="BrowsingEnum" minOccurs="0" maxOccurs="1" default="questionnaire"/>
            <xs:element name="SeqNum" type="xs:boolean" default="true"/>
            <xs:element name="PreQuestSymbol" type="xs:boolean" default="true"/>
        </xs:sequence>
    </xs:complexType>       
    
    <xs:simpleType name="BrowsingEnum">
        <xs:restriction base="xs:token">
            <xs:enumeration value="questionnaire"/>
            <xs:enumeration value="module"/>
            <xs:enumeration value="submodule"/>
        </xs:restriction>
    </xs:simpleType>
</xs:schema>
